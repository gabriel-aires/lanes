<%= turbo_frame_tag dom_id(card) do %>
  <div class="card card-compact bg-base-200 p-3 cursor-grab"
       data-card-id="<%= card.id %>" data-sortable-target="item">
    <div class="card-body">
      <h3 class="card-title text-sm"><%= card.title %></h3>
      <p class="text-xs whitespace-pre-wrap break-words"><%= card.description %></p>

      <%= link_to "Edit", edit_board_card_path(card, board_id: card.board),
                  class: "btn btn-xs btn-ghost mt-1" %>

      <%= link_to "Archive",
              archive_card_path(card),
              method: :delete,
              class: "btn btn-xs btn-ghost mt-1",
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?", turbo_frame: "_top" } %>
    </div>
  </div>
<% end %>